<h2>List of tasks</h2>

<%= link_to 'Create a new task', new_task_path %>

<% @tasks.each do |task| %>
<p><%= link_to task.title, task_path(task) %>
<small>
  <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %>
</small>
</p>
<% end %>
